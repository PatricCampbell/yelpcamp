include ../partials/header

div.container
    div.row
        h1(style='text-align: center;')= 'Add new comment to '   + campground.name
        div(style='width: 30%; margin: 30px auto;')
            form(action='/campgrounds/' + campground._id + '/comments' method='POST')
                div.form-group
                    input.form-control(type='text' placeholder='text' name='comment[text]')
                div.form-group
                    button.btn.btn-lg.btn-primary.btn-block Submit
            a(href='/campgrounds/' + campground._id) Go Back