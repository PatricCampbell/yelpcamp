include ../partials/header

div.container
    div.row
        h1(style='text-align: center;') Create a new campground
        div(style='width: 30%; margin: 30px auto;')
            form(action='/campgrounds' method='POST')
                div.form-group
                    input.form-control(type='text' placeholder='name' name='name')
                div.form-group
                    input.form-control(type='text' placeholder='image-url' name='image')
                div.form-group
                    input.form-control(type='text' placeholder='description' name='description')
                div.form-group
                    input.form-control(type='number' placeholder='price' name='price' min='0.01' step='0.01')
                div.form-group
                    button.btn.btn-lg.btn-primary.btn-block Submit
            a(href='/campgrounds') Go Back